#include <iostream>
#include <string>



using namespace std;

class Team
{
public:
    Team(string name1, string name2, string name3, string name4, string name5)
    {
        this->tab[0]=name1;
        this->tab[1]=name2;
        this->tab[2]=name3;
        this->tab[3]=name4;
        this->tab[4]=name5;
    }
    ~Team(){};
    void showteam();
    Team(const Team &);
private:
    string tab[4];
    string name1;
    string name2;
    string name3;
    string name4;
    string name5;
    string team;

};
 void Team::showteam()
 {
     team=tab[0]+" "+tab[1]+" "+tab[2]+" "+tab[3]+" "+tab[4]+" ";
     cout<<team<<endl;
 }
Team::Team(const Team &source)
{
    tab[0] = source.tab[0];
	tab[1] = source.tab[1];
	tab[2] = source.tab[2];
	tab[3] = source.tab[3];
	tab[4] = source.tab[4];
}
class Player
{
public:
	Player(string name, string surname, string height,string skills, string skills_2)
	{
	    this->tab[0]=name;
	    this->tab[1]=surname;
	    this->tab[2]=height;
	    this->tab[3]=skills;
	    this->tab[4]=skills_2;

	}
	~Player(){};
    void ShowPlayer();
    string ReturnProperties();
    string teamadd();
    string ChangeProperties();

    void showp();
    Player(const Player &);


private:
  string name;
  string tab[4];
  string surname;
  string height;
  string skills_2;
  string skills;
  string Properties;
  string players;
  string name_c;



};

void Player::ShowPlayer()
{

    cout<<"Gracz to: "<<tab[0]<<" "<<tab[1]<<" o wzroscie: "<<tab[2]<<" cm"<<endl<<"oraz umiejetnosciach: "<<tab[3]<<" i "<<tab[4]<<endl;


}

string Player::ReturnProperties()
{

    Properties=tab[0]+" "+tab[1]+" "+tab[2]+" "+tab[3]+" "+tab[4];
    return Properties;
}

string Player::teamadd()
{
    players=tab[0];
    return players;
}
Player::Player(const Player &source)
{
    tab[0] = source.tab[0];
	tab[1] = source.tab[1];
	tab[2] = source.tab[2];
	tab[3] = source.tab[3];
	tab[4] = source.tab[4];
}
string Player::ChangeProperties()
{
    cout<<"Podaj nowe imie: "<<endl;
    cin>>tab[0];
    cout<<"Podaj nowe nazwisko: "<<endl;
    cin>>tab[1];
    cout<<"Podaj nowy wzrost: "<<endl;
    cin>>tab[2];
    cout<<"Podaj nowa umiejetnosc: "<<endl;
    cin>>tab[3];
    cout<<"Podaj druga nowa umiejetnosc: "<<endl;
    cin>>tab[4];

}

