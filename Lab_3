#include <iostream>
#include <string>



using namespace std;


class Player
{
public:
    string tab[4];
	Player(string name, string surname, string height,string skills, string skills_2)
	{
	    this->tab[0]=name;
	    this->tab[1]=surname;
	    this->tab[2]=height;
	    this->tab[3]=skills;
	    this->tab[4]=skills_2;

	}
	~Player(){};
    void ShowPlayer();
    string ReturnProperties();
    string teamadd();
    string ChangeProperties();

    void showp();
    Player(const Player &);


private:
  string name;
  string surname;
  string height;
  string skills_2;
  string skills;
  string Properties;
  string players;
  string name_c;



};

void Player::ShowPlayer()
{

    cout<<"Gracz to: "<<tab[0]<<" "<<tab[1]<<" o wzroscie: "<<tab[2]<<" cm"<<endl<<"oraz umiejetnosciach: "<<tab[3]<<" i "<<tab[4]<<endl;


}

string Player::ReturnProperties()
{

    Properties=tab[0]+" "+tab[1]+" "+tab[2]+" "+tab[3]+" "+tab[4];
    return Properties;
}

string Player::teamadd()
{
    players=tab[0];
    return players;
}
Player::Player(const Player &source)
{
    tab[0] = source.tab[0];
	tab[1] = source.tab[1];
	tab[2] = source.tab[2];
	tab[3] = source.tab[3];
	tab[4] = source.tab[4];
}
string Player::ChangeProperties()
{
    cout<<"Podaj nowe imie: "<<endl;
    cin>>tab[0];
    cout<<"Podaj nowe nazwisko: "<<endl;
    cin>>tab[1];
    cout<<"Podaj nowy wzrost: "<<endl;
    cin>>tab[2];
    cout<<"Podaj nowa umiejetnosc: "<<endl;
    cin>>tab[3];
    cout<<"Podaj druga nowa umiejetnosc: "<<endl;
    cin>>tab[4];

}

class Team
{
public:
    Team(Player* player,Player* player1,Player* player2,Player* player3,Player* player4)
    {
        this->player=player;
        this->player1=player1;
        this->player2=player2;
        this->player3=player3;
        this->player4=player4;
    }
    void showteam();
    Team(const Team &);
private:
    Player* player;
    Player* player1;
    Player* player2;
    Player* player3;
    Player* player4;

};
 void Team::showteam()
 {
     cout<<player->tab[0];
     cout<<" ";
     cout<<player1->tab[0];
     cout<<" ";
     cout<<player2->tab[0];
     cout<<" ";
     cout<<player3->tab[0];
     cout<<" ";
     cout<<player4->tab[0];
     cout<<" ";
     cout<<endl;
 }
Team::Team(const Team &source)
{
    player = source.player;
	player1 = source.player1;
	player2 = source.player2;
	player3 = source.player3;
	player4 = source.player4;
}


